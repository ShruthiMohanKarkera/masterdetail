<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="mas.masterdetail.controller.V3"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="Title">
				<content>
					
						<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="Employee details" labelSpanXL="3" labelSpanL="3"
								labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
								columnsL="1" columnsM="1" singleContainerFullSize="false">
								<f:content>
									<Label text="Name"/>
									<Input  placeholder="name" id="i1"/>
									<Label text="Street/No."/>
									<Input placeholder="street no" id="i2"/>
									<Label text="Salary"/>
									<Input placeholder="Salary" id="i3"/>
									<Label text="Country"/>
									<Select  id="i4">
										<items>
											<core:Item text="England" key="England"/>
											<core:Item text="Germany" key="Germany"/>
											<core:Item text="USA" key="USA"/>
										</items>
									</Select>
								</f:content>
							</f:SimpleForm>
							
							<Bar>
								<contentLeft>
									<Button text="save" press="save" icon="sap-icon://save" />
								</contentLeft>
							</Bar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>